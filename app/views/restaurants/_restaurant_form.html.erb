<%= render 'error', restaurant: @restaurant %>

<%= form_for(restaurant) do |f| %>
  <p>
    <%= f.label :restaurant_name %><br>
    <%= f.text_field :restaurant_name %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :hours_open %><br>
    <%= f.number_field(:hours_open, in: 0..24, step: 1)%>
  </p>
  <p>
    <%= f.label :hours_closed %><br>
    <%= f.number_field(:hours_closed, in: 0..24, step: 1) %>
  </p>
  <p>
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity %>
  </p>
  <p>
    <%= f.label :min_size %><br>
    <%= f.number_field :min_size %>
  </p>
  <p>
    <%= f.label :max_size %><br>
    <%= f.number_field :max_size %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :neighbourhood %><br>
    <%= f.text_field :neighbourhood %>
  </p>
  <p>
    <%= f.label :price_range %><br>
    <%= f.text_field :price_range %>
  </p>
  <p>
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </p>
  <p>
    <%= f.label :restaurant_url %><br>
    <%= f.text_field :restaurant_url %>
  </p>

    <%= f.submit "Save" , :class => "button" %>
    
  </p>
<% end %>
